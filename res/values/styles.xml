<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="headerline">
		<item name="android:padding">1px</item>
		<item name="android:background">#6e6e6e</item>
		<item name="android:layout_width">1dp</item>
		<item name="android:layout_height">28dp</item>
	</style>
	 <style name="txtHeader">
        <item name="android:textColor">#3A3A3A</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:background">#C8C8C8</item>
        <item name="android:gravity">center_horizontal</item>
    </style>  
    <style name="view2">
        <item name="android:padding">1px</item>
        <item name="android:background">#6e6e6e</item>
        <item name="android:layout_width">1dp</item>
		<item name="android:layout_height">28dp</item>
    </style>
    <style name="txtNolinkright">
        <item name="android:textColor">#43B44A</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:layout_height">28dp</item>
    </style>  

</resources>
